{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": ["warn", { "vars": "all", "args": "after-used" }],
        "no-console": ["off", { "allow": ["warn", "error"] } ],
        "indent": [ "warn", 2 ],
        "linebreak-style": [ "error", "unix" ],
        "quotes": [ "warn", "single" ],
        "semi": [ "warn", "always" ]
    }
}
